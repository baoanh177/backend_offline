<h1>Login</h1>
<% if (msg.length) { %>
    <div class="alert alert-danger"><%= msg %></div>
<% } %>
<form action="" method="post" class="form">
    <input
        type="text"
        name="email"
        placeholder="Enter email..."
        class="form-control"
        value="<%= req.old.email || req.session.userEmail %>"
    />
    <span class="text text-danger"><%= req.errors.email %></span>
    <input
        type="password"
        name="password"
        placeholder="Enter password..."
        class="form-control mt-3"
        value="<%= req.old.password %>"
    />
    <span class="text text-danger"><%= req.errors.password %></span>
    <div class="mt-3">
        <button class="btn btn-primary">Đăng nhập</button>
        <% if (users.length) { %>
            <a href="/accounts" class="btn btn-info">Tài khoản đã lưu</a>
        <% } %>
        <a href="/register" class="btn btn-warning">Đăng kí</a>
        <a href="/" class="btn btn-secondary">Cancel</a>
    </div>
</form>
